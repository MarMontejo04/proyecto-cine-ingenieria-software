<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AdminSalas</title>
    <link href="../../estilos/css/bootstrap.min.css" rel="stylesheet">
    <link href="../../estilos/style.css" rel="stylesheet">
</head>
<body>
    <header>
        <?php include "../../estilos/headerAdmin.php"; ?>
    </header>

    <div class="container mt-4">
        <h1 class="text-center">Administrador de Salas</h1>

        <?php if (isset($_GET['mensaje']) && $_GET['mensaje'] === 'ok'): ?>
            <div class="alert alert-success text-center" role="alert">
                ¡Sala actualizada correctamente!
            </div>
        <?php endif; ?>

        <?php
        require "../../logica/conexion.php";

        $sql = "SELECT s.id_sala, s.nombre, s.capacidad, s.tipo, c.nombre AS cine_nombre 
                FROM Sala s
                INNER JOIN Cine c ON s.id_cine = c.id_cine";

        $resultado = $conexion->query($sql);

        if ($resultado->num_rows > 0) {
            echo '<table class="table table-bordered table-striped mt-4">';
            echo '<thead class="table-dark">';
            echo '<tr>';
            echo '<th>Cine</th>';
            echo '<th>Nombre de Sala</th>';
            echo '<th>Capacidad</th>';
            echo '<th>Tipo</th>';
            echo '<th>Acción</th>';
            echo '</tr>';
            echo '</thead>';
            echo '<tbody>';

            while ($fila = $resultado->fetch_assoc()) {
                echo '<tr>';
                echo '<form method="POST" action="../../logica/editarSala.php">';
                echo '<input type="hidden" name="id_sala" value="' . $fila["id_sala"] . '">';
                echo '<td>' . htmlspecialchars($fila["cine_nombre"]) . '</td>';
                echo '<td><input class="form-control" type="text" name="nombre" value="' . htmlspecialchars($fila["nombre"]) . '" required></td>';
                echo '<td>' . htmlspecialchars($fila["capacidad"]) . '</td>';
                echo '<td>';
                echo '<select class="form-control" name="tipo">';
                $tipos = ['tradicional', 'VIP'];
                foreach ($tipos as $tipo) {
                    $selected = ($tipo == $fila["tipo"]) ? 'selected' : '';
                    echo '<option value="' . $tipo . '" ' . $selected . '>' . ucfirst($tipo) . '</option>';
                }
                echo '</select>';
                echo '</td>';
                echo '<td><button type="submit" class="btn btn-success">Guardar</button></td>';
                echo '</form>';
                echo '</tr>';
            }

            echo '</tbody></table>';
        } else {
            echo "<p class='text-center'>No hay salas registradas.</p>";
        }

        $conexion->close();
        ?>
    </div>

    <script src="../../estilos/js/bootstrap.bundle.min.js"></script>
</body>
</html>